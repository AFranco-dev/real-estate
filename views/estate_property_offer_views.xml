<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- tree view -->
    <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">estate.property.offer.view.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="status"/>
                <field name="partner_id"/>
                <field name="property_id"/>
                <field name="property_type_id" />
            </tree>
        </field>
    </record>
    <!-- form view -->
    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.view.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="offer_details" string="Offer Details">
                        <field name="price"/>
                        <field name="status"/>
                        <field name="partner_id"/>
                        <field name="property_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- offers action -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Estate Property Offer Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('self.property_type_id.name', '=', active_id.name)]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Estate Property Offer!
            </p>
        </field>
    </record>

</odoo>