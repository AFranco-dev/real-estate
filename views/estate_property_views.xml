<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- tree view -->
    <record id="estate_property_tree_view" model="ir.ui.view">
        <field name="name">estate.property.view.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="estate_property_type_id"/>
                <field name="salesperson_id"/>
                <field name="buyer_id"/>
                <field name="property_tag_ids"/>
                <field name="total_area" />
            </tree>
        </field>
    </record>
    <!-- form view -->
    <record id="estate_property_form_view" model="ir.ui.view">
        <field name="name">estate.property.view.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button 
                        name="property_sold" 
                        string="SOLD" 
                        type="object" /> 
                    <button 
                        name="property_canceled" 
                        string="CANCEL"
                        type="object" /> 
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="state"/>
                            <field name="estate_property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer" />
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <form>
                                <group>
                                    <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area" string="Living Area (sqm)" />
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area" string="Garden Area (sqm)" />
                                        <field name="garden_orientation"/>
                                        <field name="total_area" />
                                        <field name="active" invisible="1"/>
                                    </group>
                                    <group></group>
                                </group>
                            </form>
                        </page>
                        <page name="additonal_info" string="Additional Info">
                            <form>
                                <group>
                                    <group>
                                        <field name="salesperson_id"/>
                                        <field name="buyer_id"/>
                                        <field name="property_tag_ids" widget="many2many_tags"/>
                                    </group>
                                    <group></group>
                                </group>
                            </form>
                        </page>
                        <page name="offers" string="Offers">
                            <field name="property_offer_ids">
                                <tree string="Offers Details">
                                    <field name="price" />
                                    <field name="status" />
                                    <field name="partner_id" />
                                    <field name="date_deadline" />
                                    <field name="validity" />
                                    <button 
                                        name="accept_offer" 
                                        icon ="oi-checkmark"
                                        type="object" />
                                    <button 
                                        name="reject_offer" 
                                        icon ="oi-close"
                                        type="object" />
                                </tree>
                                <form>
                                    <group>
                                        <field name="price" />
                                        <field name="status" />
                                        <field name="partner_id" />
                                        <field name="date_deadline" />
                                        <field name="validity" />
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
    <!-- SEARCH VIEW -->
    
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.view.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="">
                <field name="name" />
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter 
                    name="available" 
                    string="Available" 
                    domain="[('date_availability', '&lt;=', today)]" />
                <group string="Group By">
                    <filter name="group_by_postcode" string="Postcode" context="{'group_by': 'postcode'}" />
                </group>
            </search>
        </field>
    </record>
    
    <!-- PATIENT VIEW ACTION -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Estate Property!
            </p>
        </field>
    </record>
</odoo>